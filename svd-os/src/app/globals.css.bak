@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  /* Premium SVD Palette */
  --font-sans: var(--font-outfit), var(--font-noto-sans-jp), sans-serif;
  --font-serif: var(--font-playfair), serif;

  --color-gold-500: #D4AF37;
  --color-gold-400: #E5C558;
  --color-gold-600: #B2912D;

  --color-midnight-950: #020617;
  --color-midnight-900: #0F172A;

  --glass-border: rgba(255, 255, 255, 0.1);
  --glass-bg: rgba(15, 23, 42, 0.6);
  --glass-highlight: rgba(255, 255, 255, 0.05);

  --foreground-rgb: 255, 255, 255;
  --background-start-rgb: 2, 6, 23;
  /* Slate 950 */
  --background-end-rgb: 0, 0, 0;
}

@layer base {
  body {
    color: rgb(var(--foreground-rgb));
    background: linear-gradient(to bottom,
        transparent,
        rgb(var(--background-end-rgb))) rgb(var(--background-start-rgb));
    font-family: var(--font-sans);
  }
}

@layer utilities {
  .font-serif {
    font-family: var(--font-serif);
  }

  /* Premium Glassmorphism */
  .glass-panel {
    @apply backdrop-blur-xl bg-slate-900/60 border border-white/10 shadow-2xl;
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.3);
  }

  .glass-panel-hover {
    @apply transition-all duration-300 hover:bg-slate-800/60 hover:border-white/20 hover:shadow-[0_0_30px_rgba(59, 130, 246, 0.15)];
  }

  /* Aurora Gradient Text */
  .text-gradient-gold {
    @apply bg-clip-text text-transparent bg-gradient-to-r from-[#D4AF37] via-[#E5C558] to-[#B2912D];
  }

  .text-gradient-blue {
    @apply bg-clip-text text-transparent bg-gradient-to-r from-blue-300 via-indigo-300 to-purple-300;
  }
}